%h2
  <%= plural_class_name %>

- if @<%= plural_name %>.blank?
  .alert.alert-warning
    There are no <%= plural_class_name %>
- else
  %table.table.table-striped
    %thead
      %tr
        %th
          \#
        <% attributes.each do |attribute| -%>
%th
          <%= attribute.name.humanize %>
        <% end %>
    %tbody
      - @<%= plural_name %>.each do |<%= singular_name %>|
        %tr
          %td
            = <%= singular_name %>.id
          <% attributes.each_with_index do |attribute, index| -%>
          <% if index == 0 %>
          %td
            = link_to <%= singular_name %>.<%= attribute.name %>, <%= singular_name %>_path(<%= singular_name %>.slug)
          <% else %>
          %td
            = <%= singular_name %>.<%= attribute.name %>
          <% end %>
          <% end %>
